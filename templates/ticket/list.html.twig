{% extends 'base.html.twig' %}

{% block title %}Liste des tickets Jira{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>Liste des tickets Jira</h3>
                <a href="{{ path('ticket_create_form') }}" class="btn btn-primary">
                    + Créer un ticket
                </a>
            </div>
            <div class="card-body">
                {% if error is defined %}
                    <div class="alert alert-danger">
                        <h5>❌ Erreur</h5>
                        <p>{{ error }}</p>
                    </div>
                {% endif %}

                {# Filtres #}
                <form method="GET" class="mb-4">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="mb-3">
                                <label for="project" class="form-label">Projet</label>
                                <input type="text" class="form-control" id="project" name="project"
                                       value="{{ filters.project ?? '' }}" placeholder="WEB">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="jql" class="form-label">Requête JQL (avancé)</label>
                                <input type="text" class="form-control" id="jql" name="jql"
                                       value="{{ filters.jql ?? '' }}" placeholder="status = 'In Progress'">
                            </div>
                        </div>
                        <div class="col-md-2 d-flex align-items-end">
                            <div class="mb-3 w-100">
                                <button type="submit" class="btn btn-secondary w-100">Filtrer</button>
                            </div>
                        </div>
                    </div>
                </form>

                {# Informations de pagination #}
                {% if pagination.total > 0 %}
                    <div class="alert alert-info">
                        Affichage de {{ issues|length }} ticket(s) sur {{ pagination.total }} total
                    </div>
                {% endif %}

                {# Liste des tickets #}
                {% if issues is empty %}
                    <div class="alert alert-warning">
                        Aucun ticket trouvé.
                    </div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Clé</th>
                                    <th>Résumé</th>
                                    <th>Type</th>
                                    <th>Statut</th>
                                    <th>Priorité</th>
                                    <th>Assigné à</th>
                                    <th>Créé le</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for issue in issues %}
                                    <tr>
                                        <td>
                                            <a href="{{ issue.url }}" target="_blank" class="text-decoration-none">
                                                <strong>{{ issue.key }}</strong>
                                            </a>
                                        </td>
                                        <td>{{ issue.summary }}</td>
                                        <td>
                                            <span class="badge bg-secondary">{{ issue.type }}</span>
                                        </td>
                                        <td>
                                            <span class="badge
                                                {% if issue.status == 'Done' or issue.status == 'Terminé' %}
                                                    bg-success
                                                {% elseif issue.status == 'In Progress' or issue.status == 'En cours' %}
                                                    bg-primary
                                                {% elseif issue.status == 'To Do' or issue.status == 'À faire' %}
                                                    bg-warning
                                                {% else %}
                                                    bg-secondary
                                                {% endif %}">
                                                {{ issue.status }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge
                                                {% if issue.priority == 'Highest' or issue.priority == 'High' %}
                                                    bg-danger
                                                {% elseif issue.priority == 'Medium' %}
                                                    bg-warning
                                                {% else %}
                                                    bg-info
                                                {% endif %}">
                                                {{ issue.priority }}
                                            </span>
                                        </td>
                                        <td>{{ issue.assignee }}</td>
                                        <td>
                                            {% if issue.created %}
                                                {{ issue.created|date('d/m/Y H:i') }}
                                            {% else %}
                                                N/A
                                            {% endif %}
                                        </td>
                                        <td>
                                            <a href="{{ issue.url }}" target="_blank" class="btn btn-sm btn-outline-primary">
                                                Voir
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    {# Pagination #}
                    {% if pagination.total_pages > 1 %}
                        <nav aria-label="Pagination des tickets">
                            <ul class="pagination justify-content-center">
                                {# Bouton Précédent #}
                                <li class="page-item {% if not pagination.has_previous %}disabled{% endif %}">
                                    <a class="page-link"
                                       href="{% if pagination.has_previous %}{{ path('ticket_list', {
                                           page: pagination.current_page - 1,
                                           project: filters.project,
                                           jql: filters.jql
                                       }) }}{% else %}#{% endif %}">
                                        Précédent
                                    </a>
                                </li>

                                {# Numéros de pages #}
                                {% set start_page = max(1, pagination.current_page - 2) %}
                                {% set end_page = min(pagination.total_pages, pagination.current_page + 2) %}

                                {% if start_page > 1 %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('ticket_list', {
                                            page: 1,
                                            project: filters.project,
                                            jql: filters.jql
                                        }) }}">1</a>
                                    </li>
                                    {% if start_page > 2 %}
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    {% endif %}
                                {% endif %}

                                {% for page in start_page..end_page %}
                                    <li class="page-item {% if page == pagination.current_page %}active{% endif %}">
                                        <a class="page-link" href="{{ path('ticket_list', {
                                            page: page,
                                            project: filters.project,
                                            jql: filters.jql
                                        }) }}">{{ page }}</a>
                                    </li>
                                {% endfor %}

                                {% if end_page < pagination.total_pages %}
                                    {% if end_page < pagination.total_pages - 1 %}
                                        <li class="page-item disabled"><span class="page-link">...</span></li>
                                    {% endif %}
                                    <li class="page-item">
                                        <a class="page-link" href="{{ path('ticket_list', {
                                            page: pagination.total_pages,
                                            project: filters.project,
                                            jql: filters.jql
                                        }) }}">{{ pagination.total_pages }}</a>
                                    </li>
                                {% endif %}

                                {# Bouton Suivant #}
                                <li class="page-item {% if not pagination.has_next %}disabled{% endif %}">
                                    <a class="page-link"
                                       href="{% if pagination.has_next %}{{ path('ticket_list', {
                                           page: pagination.current_page + 1,
                                           project: filters.project,
                                           jql: filters.jql
                                       }) }}{% else %}#{% endif %}">
                                        Suivant
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}