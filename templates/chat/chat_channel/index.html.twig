{% extends 'base.html.twig' %}

{% block title %}ChatChannel index{% endblock %}

{% block body %}
    <h1>ChatChannel index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Visibility</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chat_channel in chat_channels %}
            <tr>
                <td>{{ chat_channel.id }}</td>
                <td>{{ chat_channel.name }}</td>
                <td>{{ chat_channel.visibility }}</td>
                <td>
                    <a href="{{ path('app_chat_chat_channel_show', {'id': chat_channel.id}) }}">show</a>
                    <a href="{{ path('app_chat_chat_channel_edit', {'id': chat_channel.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_chat_chat_channel_new') }}">Create new</a>
{% endblock %}
